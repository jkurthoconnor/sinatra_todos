<section id="todos">
  <header>

    <h2>Editing List: "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= params[:id] %>/delete" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>

  </header>
</section>

<form action="/lists/<%= params[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="new_name" placeholder="" type="text" value="<%= params[:new_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>" >Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
  <a href="/lists">All lists</a>
<% end %>