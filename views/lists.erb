
<ul id="lists">
  <% @lists.each_with_index do |list, number| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= number %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining(list) %> / <%= total_todos(list) %><p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add a List</a>
<% end %>

